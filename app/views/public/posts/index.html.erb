<% if @post.errors.any? %>
  <%= @post.errors.count %>件の 'error' が発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'share', post: @post, user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>投稿一覧</h2>
      <%= link_to '新着順', posts_path(sort: 'new'), class: "btn btn-outline-secondary btn-sm" %>&nbsp;|&nbsp;
      <%= link_to '古い順', posts_path(sort: 'old'), class: "btn btn-outline-secondary btn-sm" %>&nbsp;|&nbsp;
      <%= link_to 'いいね順', posts_path(sort: 'good'), class: "btn btn-outline-secondary btn-sm" %>&nbsp;|&nbsp;
      <%= link_to 'コメント順', posts_path(sort: 'comment'), class: "btn btn-outline-secondary btn-sm" %>
      <%= render 'public/posts/posts', posts: @posts %>
    </div>
  </div>
</div>