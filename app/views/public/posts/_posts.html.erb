 <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>
            氏名
          </th>
          <th>
            タイトル
          </th>
          <th>
            ご意見
          </th>
          <th>
            いいね
          </th>
          <th>
            コメント件数
          </th>
        </tr>
        <% posts.each do |post| %>
        <tr>
          <td>
            <%= link_to user_path(post.user) do %>
            <%= image_tag post.user.get_profile_image(80, 80) %>
            <% end %>
          </td>
          <td>
            <%#= link_to user_path(post.user) do %>
            <%= link_to post.user.name, user_path(post.user) %>
            <%# end %>
          </td>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= post.title %>
            <% end %>
          </td>
          <td>
            <%= post.body %>
          </td>
          <td id="favorite_<%= post.id %>">
            <%= render partial: 'public/posts/favorite', locals: {post: post} %>
          </td>
          <td>
            <%= post.comments.active_user.count %>
          </td>
        </tr>
        <% end %>
      </table>

      <%= paginate posts %>