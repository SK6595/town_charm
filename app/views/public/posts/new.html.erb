<div class="row">
  <div class="col-md-8 offset-md-2">

    <h1>新規投稿</h1>
    
    <%= render 'public/posts/form', post: @post %>
    
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery-jpostal-ja@2.14.45/jquery.jpostal.min.js"></script>
<script>
  function jpostal() {
    $('#zipcode').jpostal({
      postcode : ['#zipcode'],
      address : {
        '#post_address': '%3%4%5'
      }
    });
  }
  jpostal();
</script>