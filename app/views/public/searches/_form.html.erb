<% if user_signed_in? %>
  <div class="d-flex justify-content-end mt-4">
    <%= form_with url: search_users_path, method: :get, local: true do |f| %>
      <%= f.text_field :content, value: params[:content] %>
      <%= f.select :model, options_for_select({ "ユーザー" => "user", "投稿" => "post", "グループ" => "group" }, selected: params[:model]) %>
      <!--<%#= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>-->
      <%= f.submit '検索' %>
    <% end %>
  </div>
<% end %>