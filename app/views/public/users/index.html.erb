<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/posts/share', post: @post, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>投稿者一覧</h2>
      <table class="table">
      <thead>
       <tr>
          <th class="w-25">
          プロフィール画像
          </th>
          <th>
          投稿者
          </th>
          <th class="w-25">

          </th>
        </tr>
      </thead>
      <tbody>
       <% @users.each do |user| %>
        <tr>
          <!--<td>-->
            <%#= link_to user_path(user) do %>
            <%#= image_tag @user.get_profile_image(80, 80) %>
            <%# end %>
          <!--</td>-->
          <td>
            <%= image_tag user.get_profile_image(80,80) %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to "投稿一覧", user_path(user) %>
          </td>
        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>