<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/posts/share', post: @post, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>My投稿</h2>
      <table class="table">
        <tr>
          <th>

          </th>
          <th>
            タイトル
          </th>
          <th>
            ご意見
          </th>
          <th>
            コメント件数
          </th>
        </tr>
        <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
            <%= image_tag post.user.get_profile_image(80, 80) %>
            <% end %>
          </td>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= post.title %>
            <% end %>
          </td>
          <td>
            <%= post.body %>
          </td>
          <td>
            <%= post.comments.count %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

