<div class="row">
  <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="card mt-5">
      <div class="card-body">
        <h2 class="d-flex justify-content-center my-4">パスワードをお忘れですか？</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "public/users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="my-3">
            <%= f.submit "再設定用のURLを送信する" %>
          </div>
        <% end %>

        <%= render "public/users/shared/links" %>

      </div>
    </div>
  </div>
</div>
