<% if group.users.include?(current_user) %>
  <% status = current_user.group_users.find_by(group: group).status %>
  <% if status == "applying" %>
    <%= link_to "キャンセル", group_group_users_path(group), method: :delete, class: "btn btn-secondary" %>
  <% elsif status == "applobed" %>
    <%= link_to "退会する", group_group_users_path(group), method: :delete, class: "btn btn-danger" %>
  <% end %>
<% else %>
  <%= link_to "申請する", group_group_users_path(group), method: :post, class: "btn btn-outline-primary" %>
<% end %>