<h1>ユーザー詳細ページ</h1>

<%= image_tag @user.get_profile_image(500, 500) %>

<h4>メールアドレス</h4>
<%= @user.email %>

<h4 class="mt-3">ユーザー名</h4>
<%= @user.name %>

<div>
  <% if @user.is_active %>
    <%= link_to "退会", admin_user_path(@user), class: "btn btn-outline-danger mt-3", method: :delete, data: { confirm: "本当に削除しますか？" } %>
  <% else %>
    <%= link_to "復活", admin_user_path(@user), class: "btn btn-outline-warning mt-3", method: :patch, data: { confirm: "本当に復活しますか？" } %>
  <% end %>
</div>