<div class="row">
  <div class="col-md-12">
    <div class="card mt-5">
      <div class="card-body">
        <h2 class="d-flex justify-content-center my-4">ユーザー詳細</h2>
         
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <table class="table">
              <tr>
                <th>ユーザープロフィール画像</th>
                <td><%= image_tag @user.get_profile_image(150, 150) %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <th>ユーザー名</th>
                <td><%= @user.name %></td>
              </tr>
            </table>
          </div>
          
          <div class="col-md-6 offset-md-3">
            <div>
              <% if @user.is_active %>
              <%= link_to "退会", admin_user_path(@user), class: "btn btn-danger mt-3", method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
              <% else %>
              <%= link_to "復活", admin_user_path(@user), class: "btn btn-warning mt-3", method: :patch, data: { confirm: "本当に復活しますか？" } %>
              <% end %>
            </div>
          </div>  
        </div>
      </div>
    </div>
  </div>
</div>