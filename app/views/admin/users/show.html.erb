<div class="row">
  <div class="col-md-12">
    <div class="card mt-5">
      <div class="card-body">
        <h2 class="d-flex justify-content-center my-4">ユーザー詳細</h2>
        <p>ユーザープロフィール画像：<%= image_tag @user.get_profile_image(150, 150) %><p>
        <p class="mt-3">メールアドレス：<%= @user.email %></p>
        <p class="mt-3">ユーザー名：<%= @user.name %></p>
        <div>
          <% if @user.is_active %>
          <%= link_to "退会", admin_user_path(@user), class: "btn btn-danger mt-3", method: :delete, data: { confirm: "本当に削除しますか？" } %>
          <% else %>
          <%= link_to "復活", admin_user_path(@user), class: "btn btn-warning mt-3", method: :patch, data: { confirm: "本当に復活しますか？" } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>