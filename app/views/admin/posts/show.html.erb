<div class="row">
  <div class="col-md-12">
    <div class="card mt-5">
      <div class="card-body">
        <h2 class="d-flex justify-content-center my-4">投稿詳細</h2>

        <div>
          <%#= image_tag @post.get_image %>
          <p>タイトル：<%= @post.title %></p>
          <p>本文：<%= @post.body %></p>
          <p>投稿画像：
            <%= link_to admin_user_path(@post.user) do %>
            <%= image_tag @post.get_image %>
            <% end %>
          </p>
          <p>投稿ユーザー名：<%= link_to @post.user.name, admin_user_path(@post.user) %></p>
          <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
          <%= link_to "投稿削除", admin_post_path(@post.id), method: :delete, "data-confirm" => "投稿を本当に削除しますか？", class: "btn btn-danger" %>
        </div>

        <div>
          <p class="mt-3">コメント件数：<%= @post.comments.count %></p>
          <% @post.comments.each do |comment| %>
            <p>コメント投稿ユーザー画像：<%= image_tag comment.user.get_profile_image(100,100) %></p>
            <p>コメント投稿ユーザー名：<%#= link_to @comment.user.name, admin_user_path(@comment.user) %><%= "#{comment.user.name} #{comment.user.is_active ? '' : '(退会済)'}" %></p>
            <p class="mt-3">コメント投稿日：<%= comment.created_at.strftime('%Y/%m/%d') %></p>
            <p>コメント内容：<%= comment.comment %></p>
            <%= link_to "コメント削除", admin_post_comment_path(comment.post, comment), method: :delete, "data-confirm": "コメントを本当に削除しますか？", class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

