          </th>
          <th>
            タイトル
          </th>
        </tr>
        <% posts.each do |post| %>
        <tr>
          <td>
            <%= link_to admin_user_path(post.user) do %>
            <%= image_tag post.user.get_profile_image(80, 80) %>
            <% end %>
          </td>
          <td>
            <%#= link_to user_path(post.user) do %>
            <%= "#{post.user.name} #{post.user.is_active ? '' : '(退会済)'}" %>
            <%# end %>
          </td>
          <td>
            <%= link_to admin_post_path(post.id) do %>
              <%= post.title %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>