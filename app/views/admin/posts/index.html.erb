<% if @post.errors.any? %>
  <%= @post.errors.count %>件の 'error' が発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="card mt-5">
      <div class="card-body">
        <h2 class="d-flex justify-content-center my-4">投稿一覧</h2>
          <%= render 'admin/posts/posts', posts: @posts %>
      </div>
    </div>
  </div>
</div>