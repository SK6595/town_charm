<% if @post.errors.any? %>
  <%= @post.errors.count %>件の 'error' が発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>投稿一覧</h2>
      <%= render 'admin/posts/posts', posts: @posts %>
    </div>
  </div>
</div>