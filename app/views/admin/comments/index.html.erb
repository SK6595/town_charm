<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2 class="my-4">コメント一覧</h2>
      <table class="table table-hover table-inverse">
      	<tbody>
          <tr>
        		<th>投稿日</th>
        		<th>ユーザー名</th>
        		<th>コメント</th>
        		<th></th>
      		</tr>
      		<% @comments.each do |comment| %>
      		<tr>
        		<td>
              <%#= link_to user_path(post.user) do %>
              <%= comment.created_at %>
              <%# end %>
            </td>
      			<td>
              <%= link_to admin_user_path(comment.user.id) do %>
              <%= image_tag comment.user.get_profile_image(80, 80) %>
              <%= comment.user.name %>
              <% end %>
            </td>
            <td>
              <%= comment.comment %>
            </td>
            <td>

            </td>
      		</tr>
      		<% end %>
      	</tbody>
      </table>
    </div>
  </div>
</div>