 <table class="table table-hover table-inverse">
        <tr>
          <th>
            グループ名
          </th>
          <th>
            紹介文
          </th>
          <th>
            作成者
          </th>
          <th>
            参加人数
          </th>
        </tr>
        <% groups.each do |group| %>
        <tr>
          <td>
            <%= group.name %>
          </td>
          <td>
            <%= group.introduction %>
          </td>
          <td>
            <%#= link_to user_path(post.user) do %>
            <%= group.owner.name %>
            <%# end %>
          </td>
          <td>
            <%= group.applobed_users.count %>
          </td>
          <td>
            <%= link_to "削除", admin_group_path(group.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </table>